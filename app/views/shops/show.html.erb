<h1><%= @shop.name %></h1>

<p><%= @shop.address %></p>
<p><%= @shop.area %></p>
<p><%= @shop.description %></p>
<%= image_tag @shop.picture, class: 'img-circle'%>
<p><%= @shop.opening_hours %></p>
<p><%= @shop.contact %></p>
<p><%= @shop.website %></p>

<p><%= link_to "Edit", edit_shop_path(@shop) %></p>
<p><%= link_to "Delete", shop_path(@shop),
  :data => {:confirm => "You are about to delete this shop, are you sure?",
  :method => "delete"} %></p>

<p><%= link_to "Return to shops", shops_path %></p>
