<h1><%= @shop.name %></h1>

<p><%= @shop.address %></p>
<p><%= @shop.area %></p>
<p><%= @shop.description %></p>
<%= image_tag @shop.picture, class: 'img-circle'%>
<p><%= @shop.opening_hours %></p>
<p><%= @shop.contact %></p>
<p><%= @shop.website %></p>

<p><%= link_to "Edit", edit_shop_path(@shop) %></p>
<p><%= link_to "Delete", shop_path(@shop),
  :data => {:confirm => "You are about to delete this shop, are you sure?",
  :method => "delete"} %></p>

<hr>

  <% if @shop.offers.any? %>
    <h4>Here are the offers for this shop:</h4>

    <ul>
      <% @shop.offers.each do |offer| %>
        <li>
          <%= offer.description %> |
          <%= link_to "Edit", edit_shop_offer_path(@shop, offer) %> |
          <%= link_to "Delete", shop_offer_path(@shop, offer),
          :data => {:confirm => "Are you sure?",
          :method => "delete"} %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no offers yet!</p>
  <% end %>

  <p><%= link_to "Add a offer", new_shop_offer_path(@shop) %></p>
  <p><%= link_to "Delete Shop", shop_path(@shop),
  :data => {:confirm => "Are you sure?",
  :method => "delete"} %></p>

<p><%= link_to "Return to shops", shops_path %></p>
